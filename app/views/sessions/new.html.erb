<div class="Card login-container">
  <header class="pt-3">
    <h1 align="center" > Login </h1>
  </header>
  <%= form_tag '/', class: "form-horizontal form", method: :post do%>
  <div class="form-group">
    <%= label_tag "email" %>
    <%= email_field_tag "email", "", class:"form-control", placeholder: "enter your email address", autifocus: true %>
  </div>
  <div class="form-group">
      <%= label_tag "password" %>
      <%= password_field_tag "password", "" , class:"form-control", placeholder: "enter your password" %>
  </div>
  <div class="form-group">
    <%= submit_tag "Login", class: "btn btn-primary btn-md"%>
  </div>
  <% end %>
</div>
